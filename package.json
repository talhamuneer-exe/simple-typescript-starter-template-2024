{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "A modern TypeScript starter template with systematic error handling, updated dependencies, and enterprise-ready patterns.",
  "main": "server.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start:dev": "run-script-os",
    "start:dev:win32": "set NODE_ENV=development && npx eslint src/ --quiet --fix && npx nodemon",
    "start:dev:darwin:linux": "export NODE_ENV=development && npx eslint src/ --quiet --fix && npx nodemon",
    "start:qa": "run-script-os",
    "start:qa:win32": "set NODE_ENV=qa && npx eslint src/ --quiet --fix && npx nodemon",
    "start:qa:darwin:linux": "export NODE_ENV=qa && npx eslint src/ --quiet --fix && npx nodemon",
    "start:prod": "run-script-os",
    "start:prod:win32": "set NODE_ENV=production && npx eslint src/ --quiet --fix && npx nodemon",
    "start:prod:darwin:linux": "export NODE_ENV=production && npx eslint src/ --quiet --fix && npx nodemon",
    "start:local": "run-script-os",
    "start:local:win32": "set NODE_ENV=local && npx eslint src/ --quiet --fix && npx nodemon",
    "start:local:darwin:linux": "export NODE_ENV=local && npx eslint src/ --quiet --fix && npx nodemon",
    "start": "npx eslint src/ --quiet --fix && npm run build && node build/server.js",
    "lint": "eslint . --ext .ts",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --forceExit",
    "test:debug": "jest --detectOpenHandles --detectLeaks",
    "test:debug:verbose": "jest --detectOpenHandles --detectLeaks --verbose"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/hpp": "^0.2.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "onchange": "^7.1.0",
    "prettier": "^3.7.1",
    "rimraf": "^6.1.2",
    "run-script-os": "^1.1.6",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.10",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jest-cucumber": "^4.5.0",
    "joi": "^18.0.2",
    "morgan-body": "^2.6.9",
    "prom-client": "^15.1.3",
    "uuid": "^13.0.0",
    "validator": "^13.15.23",
    "winston": "^3.18.3",
    "winston-transport": "^4.9.0"
  }
}
